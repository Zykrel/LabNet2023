@model  List<Lab.MVC.Models.ShippersView>
@{
    ViewBag.Title = "Shippers";
}

<h1 class="my-3 text-center h1 mb-4">Lista de Shippers</h1>
<table class="table mt-4 mb-4">
    <thead>
        <tr>
            <th>
                Nombre de Compañia
            </th>
            <th>
                Telefono
            </th>
            <th>
                Eliminar
            </th>
            <th>
                Editar
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shipper in Model)
        {
            <tr>
                <td>
                    @shipper.companyName
                </td>
                <td>
                    @shipper.phone
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { shippersId = shipper.ID })
                </td>
                <td>
                    @Html.ActionLink("Editar", "Insert", new {shippersId = shipper.ID })
                </td>
            </tr>

        }
    </tbody>
</table>
<div class="btn btn-outline-info mb-4">
    @Html.ActionLink("Agregar Shipper", "Insert", "Shippers")
</div>


